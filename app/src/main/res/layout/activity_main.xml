<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnHook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hook"
        app:layout_constraintBottom_toTopOf="@+id/btnJumpTarget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnJumpTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转Target"
        app:layout_constraintBottom_toTopOf="@id/btnStartTargetService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHook" />

    <Button
        android:id="@+id/btnStartTargetService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动TargetService"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnJumpTarget" />

</androidx.constraintlayout.widget.ConstraintLayout>